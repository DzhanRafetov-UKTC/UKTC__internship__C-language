#include <stdio.h>
#include <math.h>
#include <limits.h>
//zadacha 4
/*
 
 Да се разработи програма, която проверява дали дължини на страни
 образуват триъгълник. Ако страните образуват триъгълник да се:

 - Изчисли периметърът му
 - Изчисли лицето му
 - Да се провери дали е: равностранен, равнобедрен,
 разностранен;
 - Да се провери дали е: правоъгълен, тъпоъгълен, остроъгълен.
 */
int main(){
    int a,b,c,p;
    float S,P;
    //a
    printf("a= ");
    scanf("%d,",&a);
    
    //b
    printf("b= ");
    scanf("%d",&b);
    //c
    printf("c= ");
    scanf("%d",&c);
    P=a+b+c;
    p=P/2;
  S = sqrt(p*(p-a)*(p-b)*(p-c));
    if(a>=b+c || b>=a+c || c>=a+b){
        printf("Триъгълникът не съществъва \n");
           
           }
      else if(a == b && b == c)
              printf("Триъгълникът е равностранен\n ,с лице S=%f,с периметър P=%f\n",S,P);
    
           else if(a  == b || b == c || c == a)
              printf("Триъгълникът е равнобедрен,с лице S=%f,с периметър P=%f\n",S,P);
           else
              printf("Триъгълникът е правоъгълник\n,с лице S=%f,с периметър P=%f\n",S,P);
           return 0;
    
    
    
    
        }

